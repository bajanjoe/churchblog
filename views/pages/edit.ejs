<section class="align-items-center mSpacemargin">
    <div>Edit <%= blog.title %></div>

    <div class="card card-comments mb-3 wow fadeIn mt-5 mx-5">
        <div class="card-body">

            <form action="/blog/<%= blog._id %>?_method=PUT" method="post">
                <div>
                    <label>Blog Title</label>
                    <input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>" />
                </div>
              
                <div class="form-group">
                    <label for="blogpost">Your post</label>
                    <textarea class="form-control" name="blog[body]" rows="5" id="blogpost"><%= blog.body %> </textarea>
                </div>
                <div class="text-center">
                    <button class="btn btn-outline-primary btn-sm" type="submit">Post</button>
                </div>

            </form>
        </div>
    </div>
</section>


